<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">

  <title>Library Management Portal</title>
  <link rel="icon" href="icons8-library-16.png">

</head>
<body style="background-color: #e4d6d5;">
  
    <nav class="navbar" style="background-color:#dcbbb9">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img src="icons8-library-16.png" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
          Library Management Portal
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link" href="/">Log Out</a>
          </div>
        </div>
      </div>
    </nav>
    <section>
      <div class="container mt-2">
        <form method="post" action="/user">
          <label class="form-label">Enter the Book Name</label>
          <input type="hidden" name="formID" value="form1">

          <input type="text" name="bookName" class="form-control">
          <button type="submit" name="search" class="btn btn-danger mt-2">Search</button>
        </form>
      </div>
      
    </section>

    <section class="container mt-3">
      <div class="card"> 
        <!-- ejs will be applied here -->
        <div class="card-body">
          
           <% if (typeof book=="object" && book){%>
               <p><%=book.name%></p> 
          <% }else{%>
             <p></p>
          <%}%>
          
          <form method="post" action="/user">
            <input type="hidden" name="formID" value="form2">
             <label class="form-label">Enter the Book Name you wanna request</label>

             <input type="text" name="bookReq" class="form-control">
            <button type="submit" name="request" onclick="confirms()" class="btn btn-danger mt-2">Request This Book</button>

          </form>
        </div>

      </div>
    </section>

    <section class="container mt-4">
      <button class="btn btn-danger" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasScrolling" aria-controls="offcanvasScrolling">View your Profile</button>

      <div class="offcanvas offcanvas-start" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasScrolling" aria-labelledby="offcanvasScrollingLabel">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title" id="offcanvasScrollingLabel">Profile</h5>
          <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
          <img src="studentImage.jpg" height="300px" width="300px">
          
             <% if (typeof student=="string" && student){%>
            <h1>Hi welcome to the library mangement portal <u><%=student%></u></h1>
            <% }else{%>
               <h1>Hi welcome to library managemment portal</h1>
            <%}%>
      
        </div>
      </div>

    </section>



</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
<script>
  function confirms(){
    confirm("a request will be sent to the admin for this book")
  }
</script>
</html>